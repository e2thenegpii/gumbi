prefix=@prefix@
exec_prefix=@exec_prefix@
CONFDIR=@sysconfdir@/@target@
BINDIR=@bindir@

install: api tools data

api:
	python setup.py install

tools:
	python -c "open('$(BINDIR)/flashbin', 'w').write(open('bin/flashbin.py').read().replace('bin/config/', '$(CONFDIR)'))"
	chmod +x $(BINDIR)/flashbin
	cp bin/gumbictl.py $(BINDIR)/gumbictl

data:
	mkdir -p $(CONFDIR)/
	cp bin/config/* $(CONFDIR)/

clean:
	rm -rf *.cache config.* build Makefile
